@model demoDotnet.Models.Student
@{
  ViewData["Title"] = "New Student";
}

<div>
  <h1 class="text-center" class="display-4">Create Student</h1>
	@using (Html.BeginForm("Create", "Home", FormMethod.Post))
    {
			<div class="row">
				<div class="col-lg-6">
					<label>Name :</label>
					@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
				</div>
				<div class="col-lg-6">
					<label>Status :</label>
					@Html.DropDownListFor(model => model.Status, new SelectList(new string[] {"กำลังศึกษา", "จบการศึกษา", "ลาออก"}, "กำลังศึกษา"), htmlAttributes: new { @class = "form-control" })
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-lg-12">
					<input type="submit" value="Save" class="btn btn-success btn-block"/>
				</div>
			</div>
    }
</div>